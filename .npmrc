# Optimisations pour npm
save-exact=true
legacy-peer-deps=true
fund=false
audit=false
loglevel=error
prefer-offline=true
cache-min=3600
progress=false

# Forcer la compilation des modules natifs
build-from-source=true
# Utiliser python3 pour les builds natifs
python=/usr/bin/python3
# Ignorer les scripts optionnels pour accélérer l'installation
ignore-scripts=false
# Augmenter le timeout pour les builds natifs
fetch-timeout=600000
# Utiliser le cache npm pour accélérer les builds
prefer-offline=true
